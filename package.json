        "css-build": "node-sass --omit-source-map-url /sass/mystyles.scss /css/mystyles.css",
        "css-watch": "npm run css-build -- --watch",
        "start": "npm run css-watch"
    },
    "devDependencies": {
        "axios": "^0.25",
        "bulma": "^0.9.3",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "node-sass": "^7.0.1",
        "postcss": "^8.1.14",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.49.11",
        "sass-loader": "^12.6.0"
    },
    "dependencies": {
        "laravel-echo": "^1.11.7",
        "pusher-js": "^7.1.0-beta"
    }
